	def raw_C_vixapi_method_wrapper
	end	
end

module VixR
	
	self.connect()
	end

	class Host # As returned by VixR.connect
	end

	class VM
	end

	class GuestOS < VM
	end

	class Property
	end

	class Snapshot
	end
	
end
